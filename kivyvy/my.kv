<FileSelect>:
    image1:image1
    image2:image2
    label1:label1
    BoxLayout:
        orientation: 'vertical'
        Image:
            id: image1
            source: ''
        Label:
            id: label1
            text: 'Extract leaf'
            size_hint_y: 0.1
        Image:
            id: image2
        Button:
            text: 'Select image'
            size_hint_y: 0.1
            on_press: root.open_file_dialog()
        Button:
            text: 'Run'
            size_hint_y: 0.1
            on_press: root.run()